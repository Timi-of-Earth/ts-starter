{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/@types", "./src/node_modules/@types"] // if types folder exists
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/node_modules"]
}
